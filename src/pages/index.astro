---
import Layout from "../layout/Layout.astro";
import { Button } from '@/components/ui/button'
import {Image} from 'astro:assets';
import sw_logo from '@/assets/SW_Logo.png';
import bg_picture_mobile from '@/assets/parking-lot-mobile.jpg';
import bg_picture_desktop from '@/assets/parking-lot.jpg';

---

<Layout title="RUMSpotWatch" backgroundImageMobile={bg_picture_mobile.src} backgroundImage={bg_picture_desktop.src}>
    <div class="flex flex-col flex-grow w-full h-full items-center justify-center">
        <Image src={sw_logo} alt="SpotWatch Logo" class="mx-auto my-8 logo-responsive" />
        <h1 class="text-2xl font-bold mb-4 header-text">Finding Parking Fast on Campus</h1>
        <h1 class="text-xl font-bold mb-4 header-text">Coming Soon</h1>
    </div>
</Layout>

<style>
    .header-text {
        font-family: "Geologica", sans-serif;
        font-style: italic;
        color: var(--accent-color);
    }

    .logo-responsive {
        width: 320px;
        height: auto;
    }

    /* Mobile responsive styles */
    @media screen and (max-width: 768px) {
        .logo-responsive {
            width: 250px;
        }
        
        .header-text {
            font-size: 1.25rem; /* Smaller than text-2xl */
        }
    }

    @media screen and (max-width: 480px) {
        .logo-responsive {
            width: 200px;
        }
        
        .header-text {
            font-size: 1rem; /* Even smaller for very small screens */
        }
    }

</style>