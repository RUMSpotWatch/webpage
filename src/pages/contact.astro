---
import Layout from "../layout/Layout.astro";

import FormField from "../components/ui/form_field";
---

<Layout title="About RUMSpotWatch" class="flex">
  <div
    class="flex flex-col flex-wrap items-center gap-7 border-solid border-4 m-20 p-10 w-1/2 mx-auto"
  >
    <h1 class="text-2xl text-center text-truncate">
      Have any questions or feedback? We'd Love to hear from you!
    </h1>
    <FormField
      placeholder="Full Name"
      type="text"
      inputClassName="w-full text-center"
      className="w-lg"
    />
    <FormField
      placeholder="Email address"
      type="email"
      inputClassName="w-full text-center"
      className="w-lg"
    />
    <FormField
      placeholder="Optional: Subject"
      type="text"
      inputClassName="w-full text-center"
      className="w-lg"
    />
    <FormField
      placeholder="Message"
      type="text"
      inputClassName="w-full text-center"
      className="w-lg"
    />
    <FormField
      type="submit"
      value="Submit"
      className="w-32"
      inputClassName="w-full text-center text-white  hover:bg-blue-600"
    />
  </div>
</Layout>
