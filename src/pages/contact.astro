---
import Layout from "../layout/Layout.astro";

import FormField from "../components/ui/form_field";
---

<Layout title="About RUMSpotWatch" class="flex">
  <div
    class="flex flex-col flex-wrap items-center gap-7 border-solid border-4 m-20 p-10 w-1/2 mx-auto"
  >
    <h1 class="text-2xl text-center text-truncate">
      Have any questions or feedback? We'd Love to hear from you!
    </h1>
    <FormField
      placeholder="Full Name"
      type="text"
      inputClassName="w-xl required"
      name="full_name"
    />
    <FormField
      placeholder="Email address"
      type="email"
      inputClassName="w-xl required"
      name="email"
    />
    <FormField placeholder="Subject" type="text" inputClassName="w-xl" name="subject"/>
    <textarea
      name="message"
      id="message"
      class="w-xl p-2 h-56 border-3 border-solid border-black text-black rounded-md"
      placeholder="Message"
      spellcheck="true"
      required></textarea>
    <FormField
      type="submit"
      value="Submit"
      className="w-32"
      inputClassName="w-32 text-center hover:bg-green-500"
    />
  </div>
</Layout>
