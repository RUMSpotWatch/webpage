---
import {Image} from 'astro:assets';
import sw_logo from '@/assets/SW_Logo.png';
import { Button } from '@/components/ui/button'

const currentPath = Astro.url.pathname;
---

<div class="navigation">
    <div class="desktop flex justify-between items-center h-full w-full px-6">
        <div>
            <a href="/" class="text-black hover:text-gray-700 font-medium">  <Image src={sw_logo} alt="SpotWatch Logo" class="mx-auto my-8 w-30 h-auto" /></a>
        </div>
        
        <ol class="flex list-none p-0 m-0 items-center space-x-6 md:space-x-2 lg:space-x-12 xl:space-x-16 text-2xl md:text-lg sm:text-base sm:space-x-1">
            <li><a href="/projects" class={`nav-link ${currentPath === '/projects' ? 'active' : ''}`}>Project</a></li>
            <li><a href="/contact" class={`nav-link ${currentPath === '/contact' ? 'active' : ''}`}>Contact</a></li>
            <li><a href="/faq" class={`nav-link ${currentPath === '/faq' ? 'active' : ''}`}>FaQ</a></li>
            <li><a href="/team" class={`nav-link ${currentPath === '/team' ? 'active' : ''}`}>Team</a></li>
        </ol>
    </div>
    <div class="mobile flex px-6">
        <div>
            <a href="/" class="text-black hover:text-gray-700 font-medium">  <Image src={sw_logo} alt="SpotWatch Logo" class="mx-auto my-8 w-30 h-auto" /></a>
        </div>

        <Button className="w-[40px] active:bg-[var(--accent-color)] transition-all duration-100">
            <i class='bx  bx-menu-wider'  ></i> 
        </Button>
    </div>
</div>




<style>
    .navigation {
        display: flex;
        background-color: var(--accent-color);
        margin: 1rem;
        flex-grow: 1;
        height: 80px;
        max-height: 80px;
        border-radius: 0;
        border: 4px solid black;
        box-shadow: 8px 8px 0px black;
        border-radius: 0.5rem;;
    }

    .mobile {
        display: none; /* Hide mobile navigation by default */
    }

    .navigation:hover {
 
    }

    a{
        font-size: 30px;
        font-family: "Geologica", sans-serif;
        font-optical-sizing: auto;
        font-weight: bold;
        font-style: italic;
        font-variation-settings:
            "slnt" -12,
            "CRSV" 0,
            "SHRP" 0;
    }

    .nav-link {
        display: flex;
        text-align: center;
        justify-content: end;
        color: black;
        font-weight: 500;
        padding: 4px 0;
        border-radius: 6px;
        transition: all 0.2s ease;
        text-decoration: none;
        padding-left: 50px;
        padding-right: 30px;
    }

    /* Responsive padding for nav links */
    @media screen and (max-width: 1024px) {
        .nav-link {
            padding-left: 25px;
            padding-right: 15px;
        }
    }

    @media screen and (max-width: 640px) {
        .nav-link {
            padding-left: 10px;
            padding-right: 10px;
        }
    }

    .nav-link:hover {
        color: rgb(55, 65, 81);
    }
    .nav-link.active {
        background-color: var(--secondary-color);
        clip-path: polygon(35% 0%, 100% 0%, 90% 100%, 0% 100%);
        color: white;
        font-weight: bold;
    }

     .nav-link.active:hover {
        background-color: var(--secondary-accent);
        color: var(--secondary-color);
    }

    .nav-link:active {
        background-color: var(--secondary-accent);
        clip-path: polygon(35% 0%, 100% 0%, 90% 100%, 0% 100%);
        color: var(--secondary-color);
    }

    /* Responsive styles for the navigation for mobile devices */
    @media screen and (max-width: 768px) {
        .desktop {
            display: none; /* Hide desktop navigation on mobile */
        }
        .mobile {
            display: flex; /* Show mobile navigation */
            align-items: center;
            width: 100%;
            justify-content: space-between;
        }
    }



</style>